<div class="container blog-article mt-5">
    <div class="row">
        <div class="col-lg-8">
            <!-- Post content-->
            <article>
                <!-- Post header-->
                <header class="mb-4">
                    <!-- Post title-->
                    <h1 class="fw-bolder mb-1 text-shadow">{{ title }}</h1>
                    <!-- Post meta content-->
                    <div class="text-muted fst-italic mb-2">
                        <p>Written by: {{ author}} </p>
                    </div>
                    <div class="text-muted fst-italic mb-2">{{ date }}</div>
                    <!-- Post categories-->
                    <a class="badge bg-secondary text-decoration-none link-light" href="#!">{{ tags }}</a>
                </header>
                <!-- Preview image figure-->
                <figure class="mb-4"><img class="img-fluid rounded" src="{{ image }}" alt="..." /></figure>
                <!-- Post content-->
                <section class="mb-5">
                    <p>{{ content | safe }}</p>
                </section>
            </article>

